<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/calc"
        android:layout_width="280dp"
        android:layout_height="500dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_layout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/operation"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="casual"
        android:textAlignment="textEnd"
        android:textColor="#80FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="@+id/calc"
        app:layout_constraintStart_toStartOf="@+id/calc" />

    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="reset"
        android:text="RESET"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n8"
        app:layout_constraintEnd_toEndOf="@+id/calc"
        app:layout_constraintStart_toStartOf="@+id/calc"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/suma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addOperator"
        android:text="+"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/resta"
        app:layout_constraintStart_toEndOf="@+id/n9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="9"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n6"
        app:layout_constraintStart_toEndOf="@+id/n8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="8"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n5"
        app:layout_constraintStart_toEndOf="@+id/n7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="7"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n4"
        app:layout_constraintStart_toStartOf="@+id/calc"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/decimal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calc"
        app:layout_constraintStart_toStartOf="@+id/calc"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/resta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addOperator"
        android:text="-"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/divisio"
        app:layout_constraintStart_toEndOf="@+id/n6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="6"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n3"
        app:layout_constraintStart_toEndOf="@+id/n5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n2"
        app:layout_constraintStart_toEndOf="@+id/n4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="4"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n1"
        app:layout_constraintStart_toStartOf="@+id/calc"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/divisio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addOperator"
        android:text="/"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/multiplicacio"
        app:layout_constraintStart_toEndOf="@+id/n3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/igual"
        app:layout_constraintStart_toEndOf="@+id/n2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n0"
        app:layout_constraintStart_toEndOf="@+id/n1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/decimal"
        app:layout_constraintStart_toStartOf="@+id/calc"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/multiplicacio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addOperator"
        android:text="*"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calc"
        app:layout_constraintStart_toEndOf="@+id/igual"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/igual"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="equals"
        android:text="="
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calc"
        app:layout_constraintStart_toEndOf="@+id/n0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/n0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:fontFamily="casual"
        android:onClick="addNumber"
        android:text="0"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calc"
        app:layout_constraintStart_toEndOf="@+id/decimal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:fontFamily="casual"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintEnd_toEndOf="@+id/calc"
        app:layout_constraintStart_toStartOf="@+id/calc" />

    <TextView
        android:id="@+id/titol"
        android:layout_width="271dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="casual"
        android:text="CALCULADORA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/calc"
        app:layout_constraintStart_toStartOf="@+id/calc"
        app:layout_constraintTop_toTopOf="@+id/calc" />

</androidx.constraintlayout.widget.ConstraintLayout>